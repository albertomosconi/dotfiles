#!/bin/sh
# Copied by Luke Smith

# Location of link to wallpaper link.
bgloc="$HOME/media/images/wallpaper"

[ -f "$1" ] && ln -sf "$(readlink -f "$1")" "$bgloc" && notify-send -u low "Changing background..."
[ -d "$1" ] && ln -sf "$(find "$(readlink -f "$1")" -iregex '.*.\(jpg\|jpeg\|png\|gif\)' -type f | shuf -n 1)" "$bgloc" && notify-send -u low "Applying random background..."

# wal -i "$(readlink -f "$bgloc")"

xwallpaper --zoom "$bgloc"
