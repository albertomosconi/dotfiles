#!/bin/sh
# spawns a dmenu prompt asking to choose between shutdown, reboot, logout or abort

# load xresources colors
. "$XDG_CACHE_HOME/wal/colors.sh"

choices="cancel\npoweroff\nreboot\nlogout"

chosen=$(echo -e "$choices" | dmenu -nb $color0 -sb $color9 -sf white -nf gray -i -p "How do you want to quit?")

case "$chosen" in
	poweroff) poweroff;;
	reboot) reboot;;
	logout) killall Xorg;;
	cancel) ;;
esac
