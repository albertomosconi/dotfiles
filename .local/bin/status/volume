#!/bin/sh

#Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;; 
    2) pamixer -t && kill -44 "$(pidof dwmblocks)";;
    4) pamixer --allow-boost -i 1 && kill -44 "$(pidof dwmblocks)";;
    5) pamixer --allow-boost -d 1 && kill -44 "$(pidof dwmblocks)";;
	3) notify-send "Volume module" "\Shows volume ï€¨, ïš© if muted.
- Middle click to mute.\n\
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ "$(pamixer --get-mute)" = true ] && echo ïš© -- && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï€¨ "
elif [ "$vol" -lt "30" ]; then
	icon="ï€¦ "
else
	icon="ï€§ "
fi

echo "$icon$vol%"
